generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = "postgresql://admin:admin123@localhost:5332/bank?schema=public"
 // directUrl = env("DIRECT_URL")

}

model File {
  id Int @id @default(autoincrement())

  bucket String?
  fileName String?
  originalName String?
  size Float?
  url String?

  createdAt DateTime @default(now())
  @@map("images")
}

model Folder {
  id String @id @default(cuid())

  name String @unique
  createdAt DateTime @default(now())
}

model FaceEmbedding {
  id               Int      @id @default(autoincrement())
  bucketName       String   @map("bucket_name")
  imageName        String   @map("image_name")
  embedding        Json     
  bbox             Json     
  clusterId        Int?     @map("cluster_id")
  isRepresentative Boolean  @default(false) @map("is_representative")
  faceImagePath    String?  @map("face_image_path")
  createdAt        DateTime @default(now()) @map("created_at")
  personName       String?  @map("person_name")
  
  @@index([bucketName])
  @@index([clusterId])
  @@index([isRepresentative])
  @@index([imageName])
  @@map("face_embeddings")
}